<?xml version="1.0" encoding="utf-8" ?>
<data>
	<sprite id="black" x="0" y="0" width="100%" height="100%" color="0x88000000"/>

	<chrome id="back" width="400" height="200">
		<anchor x="center" x-flush="center" y="center" y-flush="center"/>
	</chrome>
	
	<text id="title" x="0" y="5" width="back.width" text="TITLE GOES HERE" align="center" outline="0x000000">
		<anchor x="back.left" x-flush="left" y="back.top" y-flush="top"/>
	</text>

	<text id="body" x="5" y="10" width="back.width-10" text="BODY GOES HERE" align="center" outline="0x000000">
		<anchor x="back.left" x-flush="left" y="title.bottom" y-flush="top"/>
	</text>
	
	<button id="btn_browse" label="BROWSE">
		<anchor x="back.center" x-flush="center" y="back.center" y-flush="center"/>
		<param type="String" value="browse"/>
		<exact_size width="100" height="50"/>
	</button>

</data>